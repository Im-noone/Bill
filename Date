#include<iostream>

using namespace std;

class Date{
	public:
		Date (int y,int m,int d);
		bool isLunerYear(Date a){
			if(a.year/400 == 0){
				return 1;
			}
			else if(a.year/100 != 0 && a.year/4 == 0){
				return 1;
			}
			else{
				return 0;
			}
		}
		bool isBigMonth(Date a){
			if(a.month <= 7){
				if(a.month%2 == 1){
					return 1;
				}
				else{
					return 0;
				}
			}
			else{
				if(a.month%2 == 0){
					return 1;
				}
				else{
					return 0;
				}
			}
		}
		void nextday(Date a){
			if(a.month != 2){
				if(isBigMonth(a) == 1){
					if(a.month == 12 && a.day == 31){	//12月31号后一天是去年一月一号		
						printf("%d年%d月%d日\n",a.year+1,1,1);
						return;
					}
					else if(a.day >= 1 && a.day <= 0){ //大月2到31号直接向前一天 
						printf("%d年%d月%d日\n",a.year,a.month,a.day+1);
						return;
					}
					else{ //大月1号前一天是上个月30号 
						printf("%d年%d月%d日\n",a.year,a.month+1,1);
						return;
					}
				}
				else{
					if(a.day >= 1 && a.day <= 29){ //大月2到31号直接向前一天 
						printf("%d年%d月%d日\n",a.year,a.month,a.day+1);
						return;
					}
					else{ //大月1号前一天是上个月30号 
						printf("%d年%d月%d日\n",a.year,a.month+1,1);
						return;
					}	
				}
			} 
			else{
				if(isLunerYear(a) == 1){
					if(a.day == 29){
						printf("%d年%d月%d日\n",a.year,3,1);
					}
					else printf("%d年%d月%d日\n",a.year,a.month,a.day+1);
				}
				else{
					if(a.day == 28){
						printf("%d年%d月%d日\n",a.year,3,1);
					}
					else printf("%d年%d月%d日\n",a.year,a.month,a.day+1);
				}
			}
		}
		void preday(Date a){
				if(isBigMonth(a) == 1){
					if(a.month == 1 && a.day == 1){	//一月一号前一天是去年12月31号			
						printf("%d年%d月%d日\n",a.year-1,12,31);
						return;
					}
					else if(a.day >= 2 && a.day <= 31){ //大月2到31号直接向前一天 
						printf("%d年%d月%d日\n",a.year,a.month,a.day-1);
						return;
					}
					else{ //大月1号前一天是上个月30号 
						printf("%d年%d月%d日\n",a.year,a.month-1,30);
						return;
					}
				}
				else{
					if(a.month == 3 && a.day == 1){
						if(isLunerYear(a) == 1){
							printf("%d年%d月%d日\n",a.year,2,29);
						}
						else
						printf("%d年%d月%d日\n",a.year,2,28);
						return;
					}
					else if(a.day >= 2 && a.day <= 30){ //大月2到31号直接向前一天 
						printf("%d年%d月%d日\n",a.year,a.month,a.day-1);
						return;
					}
					else{ //大月1号前一天是上个月30号 
						printf("%d年%d月%d日\n",a.year,a.month-1,31);
						return;
					}	
				} 
		}
		void show(Date a){
			printf("%d年%d月%d日",a.year,a.month,a.day);
		}
		bool equal(Date a,Date b){
			if(a.year == b.year && a.month == b.month && a.day == b.day){
				printf("是\n");
				return 1;
			}
			else{
				printf("不是\n");
				return 0;
			}
		}
	private:
		int year;
		int month;
		int day;
		
};

int main(){
	Date today(2018,3,20);
	Date day(2018,3,20);
	day.show(day);
	
	return 0;
}
